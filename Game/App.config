        <add key="Resources.BoardFolder" value="Resources/Boards"/>
        <add key="Resources.BoardFile" value="5x5_testboard.txt"/>
        <add key="Resources.TileSchemaFolder" value="Resources/TileSchemas"/>
        <add key="Resources.TileSchemaFile" value="en.txt"/>
    </appSettings>
</configuration>